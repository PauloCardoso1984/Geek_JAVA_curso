package calculo;

public class Calculo {

	public static void main(String[] args) {
		System.out.println("O quadrado da soma dos dez primeiros números naturais é:");
		System.out.println();

        int soma = 0;
        
        for(int i = 1; i <= 10; i++) {
            soma += i;
            System.out.print(soma + ", ");
            System.out.println(i);
        }
        
        int quadrado = soma * soma;
        System.out.println();
        System.out.println("O quadrado da soma dos dez primeiros números naturais é: " + quadrado);
    }
}