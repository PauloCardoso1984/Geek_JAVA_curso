package object;

public class Caixa {
	
	private Conta[] contas;
	private int posicaoLivre;
	
	public Caixa() {
		contas = new Conta[100]; // até 100 contas
		posicaoLivre = 0;
	}
	
	// MÉTODOS AUXILIARES  
	// INCREMENTAR POSICAO DA CONTA
	public void adicionar(Conta nova) {
		this.contas[this.posicaoLivre] = nova;
		this.posicaoLivre ++;
	}
	
	// BUSCAR A CONTA PELA POSIÇÃO INFORMADA
	public Conta pegar(int posicao) {
		return this.contas[posicao];
	}
}
